.content {
  max-width: 800px;
  width: 100%;
  padding: 0 4%;
  padding-top: 0px;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center; }

@media screen and (max-width: 767px) {
  .content {
    padding-top: 30px;
    flex-direction: column; } }

.card {
  width: 20%;
  max-width: 250px;
  min-width: 250px;
  height: 75px;
  background-color: #2929292c;
  margin: 40px 40px;
  border-radius: 10px;
  border: 2px solid rgba(6, 74, 77, 0.178);
  font-size: 20px;
  transition: all 0.3s ease;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  cursor: pointer; }

.text {
  /* ... */
  position: absolute; }

.icon {
  position: absolute;
  top: -20px;
  left: -20px;
  width: 40px;
  height: 40px;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  transition: all 0.8s ease;
  background-color: black;
  z-index: 1; }

.material-icons.md-18 {
  font-size: 18px; }

.material-icons.md-24 {
  font-size: 24px; }

.material-icons.md-36 {
  font-size: 36px; }

.material-icons.md-48 {
  font-size: 48px; }

.card .title {
  width: 100%;
  margin: 0;
  text-align: center;
  margin-top: 0px;
  color: white;
  font-weight: 600;
  font-size: larger;
  text-transform: uppercase;
  letter-spacing: 4px;
  transition: margin-top 0.3s ease;
  /* Dodane */ }

.card .text {
  width: 80%;
  margin: 0 0;
  font-size: 13px;
  text-align: center;
  margin-top: 0px;
  color: white;
  font-weight: 200;
  letter-spacing: 2px;
  opacity: 0;
  max-height: 0;
  transition: all 0.3s ease; }

.card:hover .text {
  opacity: 1;
  max-height: 500px; }

.card:hover .icon {
  background-position: -120px; }

.card:hover .icon i {
  -webkit-background-clip: initial;
  -webkit-text-fill-color: white; }

.card:hover .title {
  margin-top: -120px;
  /* ... */ }

.courses-card.gradient-border:after {
  background: linear-gradient(135deg, #4346ff, #663cff, #3c8aff);
  content: '';
  position: absolute;
  top: calc(-1 * var(--borderWidth));
  left: calc(-1 * var(--borderWidth));
  height: calc(100% + var(--borderWidth) * 2);
  width: calc(100% + var(--borderWidth) * 2);
  border-radius: calc(2 * var(--borderWidth));
  z-index: -1;
  animation: animatedgradient 6s ease alternate infinite;
  background-size: 300% 300%; }

