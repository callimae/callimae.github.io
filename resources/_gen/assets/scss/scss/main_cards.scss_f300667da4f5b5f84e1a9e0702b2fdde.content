.gradient-border {
  --borderWidth: 5px;
  position: relative;
  border-radius: var(--borderWidth); }

.gradient-border:hover {
  --borderWidth: 10px;
  position: relative;
  border-radius: var(--borderWidth); }

@keyframes animatedgradient {
  0% {
    background-position: 0% 50%; }
  50% {
    background-position: 100% 50%; }
  100% {
    background-position: 0% 50%; } }
