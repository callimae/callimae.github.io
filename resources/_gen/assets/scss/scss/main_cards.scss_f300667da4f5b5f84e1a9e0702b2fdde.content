.courses-card .icon {
  background: black; }

.courses-card:hover .icon {
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background: linear-gradient(135deg, #4346ff, #663cff, #3c8aff);
  opacity: 1;
  transition: all 0.3s ease; }

